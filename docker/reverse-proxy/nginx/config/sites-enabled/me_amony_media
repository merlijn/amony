upstream amony_backend {
    zone amony_backend 64k;
    server amony-app:8080 resolve;
}

server {
    listen 443 ssl;
    server_name media.amony.app;

    include snippets/ssl-certificate.conf;
    include snippets/shared-proxy-settings.conf;

    proxy_connect_timeout 60s;
    proxy_send_timeout    60s;
    proxy_read_timeout    60s;

    client_max_body_size 20m;

    location / {
      proxy_pass http://amony_backend;
    }
}